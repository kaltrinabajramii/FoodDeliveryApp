@model IEnumerable<FoodDeliveryApp.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Order List</h2>
    <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-success"> Export All Orders</a>
</div>

@*<h2>Order List</h2>*@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Order Date</th>
            <th>Additional Info</th>
            <th>Restaurant</th>
            <th>Food Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.AdditionalInfo</td>
                <td>@(order.Restaurant != null ? order.Restaurant.Name : "N/A")</td>
                <td>
                    @if (order.FoodItemsInOrder != null && order.FoodItemsInOrder.Any())
                    {
                        <ol>
                            @foreach (var item in order.FoodItemsInOrder)
                            {
                                <li>@item.FoodItem.Name - Quantity: @item.Quantity</li>
                            }
                        </ol>
                    }
                    else
                    {
                        <span>No items</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
