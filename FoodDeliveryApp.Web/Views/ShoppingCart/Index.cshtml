﻿@using Microsoft.Extensions.Options
@model FoodDeliveryApp.Domain.DTO.ShoppingCartDTO
@inject IOptions<FoodDeliveryApp.Domain.StripeSettings> Stripe


@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your shopping cart includes:</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Food Item 
            </th>
            <th>
                Restaurant
            </th>
            <th>
                Price
            </th>
            <th>
                Base Delivery Fee
            </th>
            <th>
                Quantity
            </th>
            <th>
                Extras
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.FoodItemsInCarts.Count(); i++)
        {
            var item = Model.FoodItemsInCarts[i];
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.FoodItem.Restaurant.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FoodItem.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodItem.Restaurant.BaseDeliveryFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodItem.Extras.Count)
                </td>
                <td>
                    |
                    <a asp-action="Delete" asp-controller="ShoppingCart" asp-route-id="@item.FoodItem.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    <th><b>Total:</b></th>

    <th></th>
    <th></th>
    <th></th>

    <th><b>@Model.TotalPrice</b></th>

    </tfoot>
</table>

<div style="text-align:center">
    @if (Model.FoodItemsInCarts.Count > 0)
    {
        <div id="modalPlaceholder"></div>
        
        <form asp-controller="ShoppingCart" asp-action="PayOrder" method="post">
        <article>
            <script src="https://checkout.stripe.com/checkout.js"
                    class="stripe-button"
                    data-key="@Stripe.Value.PublishableKey"
                    data-locale="auto"
                    data-description="Foodie Deliveries Payment"
                    data-amount="@(Model.TotalPrice * 100)"
                    data-label="Pay $@Model.TotalPrice">
            </script>
        </article>

        </form>
    }
</div>

<script type="text/javascript">
    function orderNow() {
        $.ajax({
            url: '@Url.Action("PayOrder", "ShoppingCart")',
            type: 'GET',
            success: function (data) {
                $('#modalPlaceholder').html(data);
                $('#orderSuccesfulModal').modal('show');
            },
            error: function () {
                alert("There was an error processing your order. Please try again.");
            }
        });
    }


    function loadModal() {
        $.ajax({
            url: '@Url.Action("PayOrder", "ShoppingCart")',
            type: 'GET',
            success: function (data) {
                $('#modalPlaceholder').html(data);
                $('#orderSuccesfulModal').modal('show');
            }
        });
    }
</script>

